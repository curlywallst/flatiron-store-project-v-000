<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p>
<% end %>

<% current_user.carts.last.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= "$#{line_item.item.price.to_f/100}" %> | Quantity: <%= line_item.quantity %> | <% if line_item.item.inventory < 5 %>
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong><%= "$#{current_user.carts.last.total.to_f/100}" %></strong> </p>

<% if current_user.carts.last.status != "submitted" %>
  <%= button_to 'Checkout', checkout_path, method: :post %>
<% end %>
